<div class="trust-bar" style="background-color: {{ section.settings.bg_color }};">
  <div class="container">
    <h2 class="trust-bar__heading text-center">{{ section.settings.heading }}</h2>
    <div class="trust-bar__grid">
      {%- for block in section.blocks -%}
        <div class="trust-bar__item">
          <div class="trust-bar__icon">
            {%- if block.settings.icon != blank -%}
              {{ block.settings.icon | image_url: width: 64 | image_tag }}
            {%- else -%}
              <div class="placeholder-icon"></div>
            {%- endif -%}
          </div>
          <h3 class="trust-bar__title">{{ block.settings.title }}</h3>
          <p class="trust-bar__text">{{ block.settings.text }}</p>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Trust Bar",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Trusted by Over 1 Million Happy Customers"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#70E08B"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Trust Bar",
      "blocks": [
        { "type": "feature", "settings": { "title": "Leading Quality", "text": "From bladder protection to skin creams, we never compromise on quality." } },
        { "type": "feature", "settings": { "title": "Convenient & Discreet", "text": "From bladder protection to skin creams, we never compromise on quality." } },
        { "type": "feature", "settings": { "title": "Affordably Priced", "text": "From bladder protection to skin creams, we never compromise on quality." } }
      ]
    }
  ]
}
{% endschema %}
