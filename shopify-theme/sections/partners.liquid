<div class="partners-section py-24" style="background-color: {{ section.settings.bg_color }};">
  <div class="container">
    <h2 class="h2 text-center mb-16" style="color: {{ section.settings.heading_color }};">{{ section.settings.heading }}</h2>
    
    <div class="testimonials-grid grid md:grid-cols-3 gap-8">
      {%- for block in section.blocks -%}
        <div class="testimonial-card bg-white p-8 rounded-2xl shadow-sm border border-gray-100">
          <div class="testimonial-header flex items-center gap-4 mb-6">
            <div class="testimonial-avatar w-16 h-16 rounded-full overflow-hidden grayscale">
              {%- if block.settings.image != blank -%}
                {{ block.settings.image | image_url: width: 150 | image_tag }}
              {%- else -%}
                {{ 'image' | placeholder_svg_tag }}
              {%- endif -%}
            </div>
            <div class="testimonial-meta">
              <p class="company text-xs text-gray-500 font-medium">{{ block.settings.company }}</p>
              <p class="name font-bold text-tula-green">{{ block.settings.name }}</p>
            </div>
          </div>
          <p class="testimonial-text text-gray-600 italic leading-relaxed">"{{ block.settings.text }}"</p>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Partners/Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Partners who trust our equipment"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#70E08B"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#F9F9F9"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Avatar"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name"
        },
        {
          "type": "text",
          "id": "company",
          "label": "Company"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Testimonial Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Partners/Testimonials"
    }
  ]
}
{% endschema %}
