<footer class="footer" style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }};">
  <div class="container">
    <div class="footer__grid">
      <div class="footer__newsletter">
        <h2 class="footer__heading">{{ section.settings.newsletter_heading }}</h2>
        <form class="newsletter-form">
          <input type="email" placeholder="Enter your email here" class="newsletter-input">
          <button type="submit" class="button button--primary">Start Now!</button>
        </form>
        
        <div class="footer__contact-info">
          <div class="info-block">
            <p class="label">Contact Us</p>
            <p>{{ section.settings.phone }}</p>
            <p>{{ section.settings.email }}</p>
          </div>
          <div class="info-block">
            <p class="label">Location</p>
            <p>{{ section.settings.address }}</p>
          </div>
        </div>
      </div>
      
      {%- for block in section.blocks -%}
        <div class="footer__menu">
          <p class="footer__heading-small">{{ block.settings.heading }}</p>
          <ul class="footer__list">
            {%- for link in block.settings.menu.links -%}
              <li><a href="{{ link.url }}">{{ link.title }}</a></li>
            {%- endfor -%}
          </ul>
        </div>
      {%- endfor -%}
    </div>
    
    <div class="footer__bottom">
      <div class="footer__social">
        {% render 'icon-facebook' %}
        {% render 'icon-instagram' %}
        {% render 'icon-twitter' %}
        {% render 'icon-youtube' %}
      </div>
      <p class="copyright">Â© {{ 'now' | date: "%Y" }} {{ shop.name }} All rights reserved.</p>
      <div class="footer__legal">
        <a href="#">Terms & Conditions</a>
        <a href="#">Privacy Policy</a>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#1A3026"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "text",
      "id": "newsletter_heading",
      "label": "Newsletter Heading",
      "default": "Care and clarity, delivered to your inbox."
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone",
      "default": "+1 (999) 888-77-66"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email",
      "default": "hello@tulacare.com"
    },
    {
      "type": "textarea",
      "id": "address",
      "label": "Address",
      "default": "250 Hudson St floor 6, New York, NY 10013, USA"
    }
  ],
  "blocks": [
    {
      "type": "menu",
      "name": "Menu",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    }
  ]
}
{% endschema %}
