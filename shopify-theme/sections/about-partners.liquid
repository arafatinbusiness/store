<div class="about-partners" style="background-color: {{ section.settings.bg_color }};">
  <div class="container text-center">
    <h2 class="h2">{{ section.settings.heading }}</h2>
    <div class="description">{{ section.settings.description }}</div>
    
    <div class="partners-logo-grid">
      {%- for block in section.blocks -%}
        <div class="partner-logo">
          {{ block.settings.image | image_url: width: 200 | image_tag: loading: 'lazy' }}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "About Partners",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Partners"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#F4FBF7"
    }
  ],
  "blocks": [
    {
      "type": "partner",
      "name": "Partner",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Logo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Partners"
    }
  ]
}
{% endschema %}
