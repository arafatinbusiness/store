<div class="pre-footer-contact bg-tula-dark py-8">
  <div class="container flex flex-wrap justify-center gap-12">
    {%- for block in section.blocks -%}
      <div class="contact-item flex items-center gap-3 text-white">
        <div class="icon text-tula-green">
          {%- if block.settings.icon == 'phone' -%}{% render 'icon-phone' %}
          {%- elsif block.settings.icon == 'chat' -%}{% render 'icon-instagram' %}
          {%- else -%}{% render 'icon-account' %}{%- endif -%}
        </div>
        <span class="text-sm font-bold">{{ block.settings.text }}</span>
      </div>
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Pre-footer Contact Bar",
  "blocks": [
    {
      "type": "contact_item",
      "name": "Contact Item",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "phone", "label": "Phone" },
            { "value": "chat", "label": "Chat" },
            { "value": "email", "label": "Email" }
          ],
          "default": "phone"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Pre-footer Contact Bar"
    }
  ]
}
{% endschema %}
