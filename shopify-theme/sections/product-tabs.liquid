<div class="product-tabs container py-12">
  <div class="tabs-layout grid lg:grid-cols-3 gap-12">
    <div class="lg:col-span-2">
      <div class="tabs-header flex border-b border-gray-100 mb-8">
        {%- for block in section.blocks -%}
          <button class="tab-trigger px-8 py-4 text-xs font-bold uppercase tracking-widest {% if forloop.first %}active border-b-2 border-tula-green text-tula-green{% endif %}">
            {{ block.settings.title }}
          </button>
        {%- endfor -%}
      </div>
      
      <div class="tabs-content bg-white rounded-3xl p-8 shadow-sm border border-gray-100">
        {%- for block in section.blocks -%}
          <div class="tab-pane {% unless forloop.first %}hidden{% endunless %}">
            {{ block.settings.content }}
          </div>
        {%- endfor -%}
      </div>
    </div>

    <aside class="bought-together">
      <div class="bg-white rounded-3xl p-8 shadow-sm border border-gray-100">
        <h3 class="text-center font-bold text-lg mb-8">{{ section.settings.fbt_heading }}</h3>
        <div class="fbt-list space-y-8">
          {%- comment -%} This would typically pull from a collection or metafields {%- endcomment -%}
          {%- for i in (1..3) -%}
            <div class="fbt-item flex gap-4 items-center">
              <div class="w-20 h-20 bg-gray-50 rounded-xl flex items-center justify-center">
                <div class="placeholder-img"></div>
              </div>
              <div class="flex-1">
                <p class="text-xs font-bold mb-1">Recommended Accessory {{ i }}</p>
                <p class="text-tula-green font-black text-sm mb-2">$49.99</p>
                <button class="button button--primary text-[10px] py-1.5">Add to cart</button>
              </div>
            </div>
          {%- endfor -%}
        </div>
      </div>
    </aside>
  </div>
</div>

{% schema %}
{
  "name": "Product Tabs & Sidebar",
  "settings": [
    {
      "type": "text",
      "id": "fbt_heading",
      "label": "Bought Together Heading",
      "default": "Frequently Bought Together"
    }
  ],
  "blocks": [
    {
      "type": "tab",
      "name": "Tab",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Tab Title"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Tab Content"
        }
      ]
    }
  ]
}
{% endschema %}
