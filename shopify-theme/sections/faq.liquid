<div class="faq-section" style="background-color: {{ section.settings.bg_color }};">
  <div class="container max-width-small">
    <div class="faq-list">
      {%- for block in section.blocks -%}
        <div class="faq-item" {{ block.shopify_attributes }}>
          <button class="faq-trigger" aria-expanded="false">
            {{ block.settings.question }}
            <span class="icon">{% render 'icon-plus' %}</span>
          </button>
          <div class="faq-content" hidden>
            <div class="faq-content-inner">
              {{ block.settings.answer }}
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "FAQ Accordion",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#70E08B"
    }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ Accordion"
    }
  ]
}
{% endschema %}
